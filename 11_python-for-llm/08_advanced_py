from typing import List, Dict, Optional, Union 

# Enumerate & Zip



docs = ["공지사항.txt","비밀문서.pdf","이력서.docx"]
content = ["오늘은 월요일입니다.","일급 기물..","홍길동입니다."]

for doc, content in zip(docs, content):
    print(f"파일: {doc}의 내용: {content}")

# enumerate : 인덱스와 값을 동시에 받아올 때 사용
for idx, doc in enumerate(docs):
    print(f"{idx + 1}번째 문서: {doc}")


# Type hint 심화

# Optional : 값이 있을 수도 있고, 없을 수도 있다.
# Union[int, str] : int 또는 str 타입일 올 수 있다.
# def search_db(query: str, limit: Optional[int] = 10) -> List[Dict[str, str]]:
def search_db(query: str, limit: int | None = 10) -> list[dict[str, str]]:
    """
    query: 검색어(필수)
    limit: 검색 결과 제한 개수(선택, 기본값 10, None 허용)
    return: 딕셔너리들의 리스트르 반환
    """
    # query가 빈 문자열("")이거나 None이면 False로 간주
    if not query:
        return []

    # 가상의 검색결과
    result = [
        {"title": "검색결과1", "snippet": "내용..."},
        {"title": "검색결과2", "snippet": "내용..."},    
    ]

    # limit이 10이면 0번부터 9번 인덱스까지 자름
    # limit이 None이면 Python은 '끝까지'로 인식 -> 전체 반환(result[:])
    return result[:limit] 

data = search_db("파이썬", limit=None)
print(data)